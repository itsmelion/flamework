{
  "name": "flamework",
  "version": "4.2.1",
  "description": "A flexbox SCSS/StyledComponent lib. Light, non-intrusive with intuitive and clear syntax",
  "homepage": "https://flamework.netlify.app",
  "type": "commonjs",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "style": "./index.scss",
  "sass": "./index.scss",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "prestyleguide": "yarn build",
    "styleguide": "styleguidist server",
    "prestyleguide:build": "yarn build",
    "styleguide:build": "styleguidist build",
    "start": "yarn styleguide",
    "prepublish": "yarn build",
    "build": "NODE_ENV=production tsc -b",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}' --fix ./src",
    "lint:ci": "eslint '**/*.{js,jsx,ts,tsx}' --quiet ./src",
    "lint:css": "stylelint './src/**/*.js'"
  },
  "resolutions": {
    "core-js": "3.26.1",
    "chokidar": ">=3"
  },
  "peerDependencies": {
    "styled-components": ">=4"
  },
  "devDependencies": {
    "@babel/cli": "7.19.3",
    "@babel/core": "7.20.2",
    "@babel/node": "7.20.2",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.18.6",
    "@typescript-eslint/eslint-plugin": "5.42.0",
    "@typescript-eslint/parser": "5.42.0",
    "babel-eslint": "10.1.0",
    "babel-plugin-styled-components": "2.0.7",
    "eslint": "8.28.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-lion": "2.2.6",
    "eslint-config-promise": "2.0.2",
    "eslint-config-react": "1.1.7",
    "eslint-config-standard": "17.0.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.31.11",
    "eslint-plugin-react-hooks": "4.6.0",
    "lodash": "4.17.21",
    "prop-types": "15.8.1",
    "react": "18.2.0",
    "react-docgen-typescript": "2.2.2",
    "react-dom": "18.2.0",
    "react-is": "18.2.0",
    "react-scripts": "5.0.1",
    "react-styleguidist": "13.0.0",
    "styled-components": "5.3.6",
    "stylelint": "14.15.0",
    "stylelint-config-recommended": "9.0.0",
    "stylelint-config-recommended-scss": "8.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.10.0",
    "stylelint-scss": "4.3.0",
    "ts-loader": "9.4.1",
    "ts-node": "10.9.1",
    "typescript": "4.9.3",
    "typescript-plugin-styled-components": "2.0.0",
    "webpack": "5.74.0"
  },
  "optionalDependencies": {
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "@types/styled-components": "5.1.26"
  },
  "browserslist": {
    "production": [
      ">0.3%",
      "unreleased versions",
      "last 2 versions",
      "not Chrome <= 60",
      "not dead",
      "not ie <= 11",
      "not op_mini all",
      "not kaios <= 99",
      "not Baidu <= 99"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "unreleased versions",
      "not ie <= 11"
    ]
  },
  "keywords": [
    "alia",
    "flexbox",
    "framework",
    "css",
    "grid",
    "bootstrap",
    "gridlex",
    "flexboxgrid",
    "flamework",
    "firework",
    "flameworks",
    "fireworks"
  ],
  "license": "MIT",
  "author": {
    "name": "Christhopher Lion",
    "email": "christhopherlion@icloud.com",
    "url": "https://lion.alia.ml/"
  },
  "repository": "github:itsmelion/flamework",
  "bugs": "https://github.com/itsmelion/flamework/issues",
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  }
}
